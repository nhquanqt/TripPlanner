<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ECEFF1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="705dp"
            android:background="@color/While">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="44dp"
                android:textAlignment="center"
                android:text="Thông tin chi tiêu"
                android:textAppearance="@style/expense"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="32dp"
                android:background="@color/While"
                android:text="Trở lại"
                android:textAppearance="@style/done"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <Button
                android:id="@+id/btnExpenseSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="32dp"
                android:layout_marginRight="8dp"
                android:text="Xong"
                android:textAppearance="@style/done"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="80dp"
                android:background="@drawable/separator" />

            <EditText
                android:id="@+id/item_cost"
                android:layout_width="199dp"
                android:layout_height="61dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="90dp"
                android:layout_marginRight="17.5dp"
                android:gravity="center|right"
                android:inputType="number"
                android:text="0"
                android:textColor="@color/Red"
                android:textSize="40dp" />

            <!--            <TextView-->
            <!--                android:id="@+id/settings"-->
            <!--                android:layout_width="85dp"-->
            <!--                android:layout_height="35dp"-->
            <!--                android:layout_alignParentLeft="true"-->
            <!--                android:layout_alignParentTop="true"-->
            <!--                android:layout_marginLeft="17.5dp"-->
            <!--                android:layout_marginTop="145dp"-->
            <!--                android:alpha="0.3"-->
            <!--                android:gravity="top"-->
            <!--                android:text="Settings"-->
            <!--                android:textAppearance="@style/settings" />-->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="166dp"
                android:background="@drawable/separator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13.5dp"
                android:layout_marginTop="178dp"
                android:text="Loại chi tiêu"
                android:textAppearance="@style/type" />


            <Spinner
                android:id="@+id/item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="178dp"
                android:layout_marginRight="13.5dp"
                android:entries="@array/list_type_expense"
                android:gravity="center|right"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="220dp"
                android:background="@drawable/separator" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13.5dp"
                android:layout_marginTop="232dp"
                android:text="Ngày"
                android:textAppearance="@style/type" />

            <Button
                android:id="@+id/item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chọn ngày "
                android:textAppearance="@style/done"
                android:textSize="16sp"
                app:icon="@drawable/vector"
                app:iconTint="@color/black"
                android:layoutDirection="rtl"

                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="220dp"
                android:layout_marginRight="4dp"

                style="@style/Widget.MaterialComponents.Button.TextButton.Icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="274dp"
                android:background="@drawable/separator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="8"
                android:layout_column="1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="13.5dp"
                android:layout_marginTop="286dp"
                android:text="Địa điểm"
                android:textAppearance="@style/type" />


            <EditText
                android:id="@+id/item_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Điền địa điểm"
                android:textColorHint="@color/blue"
                android:textAppearance="@style/done"
                android:textSize="16sp"
                app:icon="@drawable/vector"
                app:iconTint="@color/black"
                android:layoutDirection="rtl"

                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="274dp"
                android:layout_marginRight="4dp"

                style="@style/Widget.MaterialComponents.Button.TextButton.Icon" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="34dp"
                android:layout_marginTop="328dp"
                android:background="@drawable/separator" />
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="350dp"
                android:background="@drawable/layout_bg10"
                android:text="Xóa" />
        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>